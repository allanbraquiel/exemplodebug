<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:columnCount="4"
    tools:context=".GridActivity">

    <TextView
        android:text="Grid"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn1"
        android:text="Botão 1"
        android:textColor="#E8E9EB"
        android:background="#113D96"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:onClick="btn1"/>

    <Button
        android:id="@+id/btn2"
        android:text="Botão 2"
        android:textColor="#E8E9EB"
        android:background="#445A86"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:onClick="btn2"/>

    <Button
        android:id="@+id/btn3"
        android:text="Botão 3"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:textColor="#E8E9EB"
        android:background="#868D9B"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:onClick="btn3"/>

    <Button
        android:id="@+id/btn4"
        android:text="Botão 4"
        android:layout_columnSpan="3"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:textColor="#E8E9EB"
        android:background="#861D15"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:onClick="btn4"/>

    <Button
        android:id="@+id/btn5"
        android:text="Botão 5"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:textColor="#E8E9EB"
        android:background="#68423F"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:onClick="btn5"/>

    <Button
        android:id="@+id/btn6"
        android:text="Botão 6"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:textColor="#E8E9EB"
        android:background="#A611C0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:onClick="btn6"/>

    <Button
        android:id="@+id/btn7"
        android:text="Botão 7"
        android:textColor="#E8E9EB"
        android:background="#D8EE04"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:onClick="btn7"/>

    <Button
        android:id="@+id/btn8"
        android:text="Botão 8"
        android:textColor="#E8E9EB"
        android:background="#3D420C"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:onClick="btn8"/>

    <Button
        android:id="@+id/btn9"
        android:text="Botão 9"
        android:textColor="#E8E9EB"
        android:background="#BBB582"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:onClick="btn9"/>

    <Button
        android:id="@+id/btn10"
        android:text="Botão 10"
        android:layout_gravity="fill_horizontal"
        android:textColor="#E8E9EB"
        android:background="#2E2A20"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:onClick="btn10"/>


</GridLayout>