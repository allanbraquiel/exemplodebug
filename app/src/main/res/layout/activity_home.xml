<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnMain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/botao_main"
            android:fontFamily="monospace"
            android:gravity="center"
            android:onClick="exibirTela"
            android:text="Main Activity"
            android:textColor="#D2D3DA"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnLista"
            android:radius="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/botao_lista"
            android:fontFamily="monospace"
            android:onClick="exibirTela"
            android:text="Lista"
            android:textColor="#E8E9EB"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnGrid"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/botao_grid"
            android:fontFamily="monospace"
            android:onClick="exibirTela"
            android:text="Grid BotÃµes"
            android:textColor="#E8E9EB"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAluno"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/botao_aluno"
            android:fontFamily="monospace"
            android:onClick="exibirTela"
            android:text="Cadastrar Aluno"
            android:textColor="#E8E9EB"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>